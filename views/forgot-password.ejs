<!-- Forgot Password Section -->
<section class="py-5 mt-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5 col-md-7">
                <div class="card shadow-lg border-0">
                    <div class="card-header bg-warning text-dark text-center py-4">
                        <h4 class="mb-0">
                            <i class="fas fa-key me-2"></i>
                            Forgot Password
                        </h4>
                        <p class="mb-0 mt-2">Reset your account password</p>
                    </div>
                    
                    <div class="card-body p-5">
                        <div class="text-center mb-4">
                            <i class="fas fa-lock fa-3x text-warning mb-3"></i>
                            <p class="text-muted">
                                Enter your email address and we'll send you instructions to reset your password.
                            </p>
                        </div>
                        
                        <!-- Forgot Password Form -->
                        <form id="forgotPasswordForm" action="/forgot-password" method="POST" novalidate>
                            <!-- Email Field -->
                            <div class="mb-4">
                                <label for="email" class="form-label">
                                    <i class="fas fa-envelope me-1"></i>Email Address
                                </label>
                                <input 
                                    type="email" 
                                    class="form-control form-control-lg" 
                                    id="email" 
                                    name="email" 
                                    placeholder="Enter your email address"
                                    value="<%= typeof formData !== 'undefined' && formData.email ? formData.email : '' %>"
                                    required
                                >
                                <div class="invalid-feedback">
                                    Please enter a valid email address.
                                </div>
                                <div class="form-text">
                                    <i class="fas fa-info-circle me-1"></i>
                                    We'll send reset instructions to this email address.
                                </div>
                            </div>
                            
                            <!-- Submit Button -->
                            <div class="d-grid mb-4">
                                <button type="submit" class="btn btn-warning btn-lg text-dark" id="resetBtn">
                                    <i class="fas fa-paper-plane me-2"></i>
                                    Send Reset Instructions
                                </button>
                            </div>
                            
                            <!-- CSRF Token -->
                            <% if (typeof csrfToken !== 'undefined') { %>
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                            <% } %>
                        </form>
                        
                        <!-- Back to Login -->
                        <div class="text-center">
                            <p class="mb-0">
                                Remember your password? 
                                <a href="/login" class="text-decoration-none fw-bold">
                                    <i class="fas fa-arrow-left me-1"></i>
                                    Back to Login
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
                
                <!-- Help Section -->
                <div class="card mt-4 border-info">
                    <div class="card-body text-center">
                        <h6 class="text-info">
                            <i class="fas fa-question-circle me-1"></i>
                            Need Help?
                        </h6>
                        <p class="mb-2 small text-muted">
                            If you don't receive the email within a few minutes, please check your spam folder.
                        </p>
                        <p class="mb-0 small text-muted">
                            Still having trouble? 
                            <a href="/contact" class="text-decoration-none">Contact our support team</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Page-specific JavaScript -->
<script>
document.addEventListener('DOMContentLoaded', function() {
    const forgotPasswordForm = document.getElementById('forgotPasswordForm');
    const resetBtn = document.getElementById('resetBtn');
    const emailField = document.getElementById('email');
    
    // Auto-focus on email field
    emailField.focus();
    
    // Form validation and submission
    forgotPasswordForm.addEventListener('submit', function(e) {
        e.preventDefault();
        
        // Remove previous validation classes
        emailField.classList.remove('is-invalid', 'is-valid');
        
        let isValid = true;
        
        // Validate email
        const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
        if (!emailField.value.trim()) {
            emailField.classList.add('is-invalid');
            emailField.nextElementSibling.textContent = 'Please enter your email address.';
            isValid = false;
        } else if (!emailRegex.test(emailField.value)) {
            emailField.classList.add('is-invalid');
            emailField.nextElementSibling.textContent = 'Please enter a valid email address.';
            isValid = false;
        } else {
            emailField.classList.add('is-valid');
        }
        
        if (isValid) {
            // Show loading state
            resetBtn.disabled = true;
            resetBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2" role="status"></span>Sending...';
            
            // Submit form
            setTimeout(() => {
                forgotPasswordForm.submit();
            }, 500);
        }
    });
    
    console.log('Forgot password form initialized');
});
</script>

