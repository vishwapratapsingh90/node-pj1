<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? title : 'Admin Panel' %></title>
    
    <!-- Admin-specific CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    
    <style>
        .admin-sidebar {
            background: #2c3e50;
            min-height: 100vh;
            color: white;
        }
        .admin-content {
            background: #ecf0f1;
            min-height: 100vh;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Admin Sidebar -->
            <div class="col-md-3 col-lg-2 admin-sidebar p-3">
                <h4><i class="fas fa-cog me-2"></i>Admin Panel</h4>
                <hr>
                <nav class="nav flex-column">
                    <a class="nav-link text-light" href="/admin">
                        <i class="fas fa-dashboard me-2"></i>Dashboard
                    </a>
                    <a class="nav-link text-light" href="/admin/users">
                        <i class="fas fa-users me-2"></i>Users
                    </a>
                    <a class="nav-link text-light" href="/admin/settings">
                        <i class="fas fa-cog me-2"></i>Settings
                    </a>
                </nav>
            </div>
            
            <!-- Admin Content -->
            <div class="col-md-9 col-lg-10 admin-content p-4">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2><%= typeof title !== 'undefined' ? title : 'Admin Dashboard' %></h2>
                    <span class="badge bg-primary">Admin Layout</span>
                </div>
                
                <!-- Page Content -->
                <%- body %>
            </div>
        </div>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        console.log('Admin layout loaded');
    </script>
</body>
</html>